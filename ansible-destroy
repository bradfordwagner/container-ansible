# required env vars:
# ANSIBLE_OS

ansible_destroy() {
  destroy_${ANSIBLE_OS}
}

pip_uninstall() {
  local pip=$1
  $pip uninstall --nocache-dir -y ansible
}

uninstall_debian () {
    pip_uninstall pip3
}

destroy_python_debian () {
    apt-get purge -y \
            wget \
            python3
}

destroy_debian () {
    uninstall_debian
    destroy_python_debian
}

uninstall_ubuntu () {
    pip_uninstall pip3
}

destroy_python_ubuntu () {
    apt-get purge -y \
            python3-distutils \
            python3 \
            wget
}

destroy_ubuntu () {
    uninstall_ubuntu
    destroy_python_ubuntu
}

uninstall_alpine () {
    pip_uninstall pip
}

destroy_python_alpine () {
    apk del python3-dev \
            python3 \
            wget
}

destroy_alpine () {
    uninstall_alpine
    destroy_python_alpine
}

destroy_archlinux () {
  # empty and naughty for now
}

ansible_destroy
